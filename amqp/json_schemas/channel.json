{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Channel Schema",
  "type": "object",
  "additionalProperties": false,
  "patternProperties": {
    "^x-[\\w\\d\\.\\-\\_]+$": {
      "$ref": "#/definitions/specificationExtension"
    }
  },
  "properties": {
    "is": {
      "type": "string",
      "enum": ["queue", "routingKey"]
    },
    "exchange": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "maxLength": 255
        },
        "type": {
          "type": "string",
          "enum": ["topic", "direct", "fanout", "default", "headers"]
        },
        "durable": {
          "type": "boolean"
        },
        "autoDelete": {
          "type": "boolean"
        },
        "vhost": {
          "type": "string",
          "default": "/"
        }
      }
    },
    "queue": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "maxLength": 255
        },
        "durable": {
          "type": "boolean"
        },
        "exclusive": {
          "type": "boolean"
        },
        "autoDelete": {
          "type": "boolean"
        },
        "vhost": {
          "type": "string",
          "default": "/"
        }
      }
    },
    "bindingVersion": {
      "type": "string",
      "default": "latest"
    }

  },
  "definitions": {
    "specificationExtension": {
      "description": "Any property starting with x- is valid.",
      "additionalProperties": true,
      "additionalItems": true
    }
  }
}