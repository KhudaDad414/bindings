{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Server Schema",
  "type": "object",
  "additionalProperties": false,
  "patternProperties": {
    "^x-[\\w\\d\\.\\-\\_]+$": {
      "$ref": "#/definitions/specificationExtension"
    }
  },
  "properties": {

    "clientId": {
      "type": "string"
    },
    "cleanSession": {
      "type": "boolean"
    },
    "lastWill": {
      "type": "object",
      "properties": {
        "topic": {
          "type": "string"
        },
        "qos": {
          "type": "integer",
          "enum": [0,1,2]
        },
        "message": {
          "type": "string"
        },
        "retain": {
          "type": "boolean"
        }
      }
    },
    "keepAlive": {
      "type": "integer"
    },
    "bindingVersion": {
      "type": "string",
      "default": "latest"
    }
  },
  "definitions": {
    "specificationExtension": {
      "description": "Any property starting with x- is valid.",
      "additionalProperties": true,
      "additionalItems": true
    }
  }
}